<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="AppTheme.Base"/>
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:listViewStyle">@style/ListView</item>
		<item name="blockImageStyle">@style/BlockImage</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="AppTheme.Launcher" parent="AppTheme.LauncherBase"/>
	<style name="AppTheme.LauncherBase">
		<item name="android:windowBackground">@drawable/launch_screen</item>
	</style>

	<style name="ListView" parent="Widget.AppCompat.ListView">
		<item name="android:divider">@null</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="BlockImage" parent="BlockImageBase"/>
	<style name="BlockImageBase">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="TextView">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">@dimen/list_primary_text_size</item>
		<item name="android:alpha">@dimen/list_primary_text_alpha</item>
	</style>
	<style name="TextView.Secondary" parent="TextView">
		<item name="android:textSize">@dimen/list_secondary_text_size</item>
		<item name="android:alpha">@dimen/list_secondary_text_alpha</item>
	</style>
	<style name="TextView.Tutorial" parent="TextView">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">@dimen/tutorial_title_text_size</item>
	</style>

	<!-- empty state -->
	<item type="id" name="emptyStateText"/>
	<item type="id" name="emptyStateImage"/>
	<item type="id" name="emptyStateLayout"/>
	<style name="TextView.EmptyState" parent="TextView.Secondary">
		<item name="android:id">@id/emptyStateText</item>
		<item name="android:layout_below">@id/emptyStateImage</item>
		<item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
		<item name="android:layout_marginLeft">@dimen/empty_state_text_margin</item>
		<item name="android:layout_marginRight">@dimen/empty_state_text_margin</item>
		<item name="android:textSize">@dimen/empty_state_text_size</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="ImageViewEmptyState">
		<item name="android:id">@id/emptyStateImage</item>
		<item name="android:scaleType">center</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:tint">@color/empty_state_bg</item>
	</style>
	<style name="RelativeLayoutEmptyState">
		<item name="android:id">@id/emptyStateLayout</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:visibility">gone</item>
	</style>

	<!-- tic tac toe -->
	<style name="TicTacToe">
		<item name="layout_widthPercent">33%</item>
		<item name="layout_aspectRatio">100%</item>
	</style>
</resources>
