<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/list_two_lines_height"
	android:background="?android:attr/selectableItemBackground">

	<com.nshsappdesignteam.nshsguide.helper.BlockImage
		android:layout_width="@dimen/list_primary_image_size"
		android:layout_height="@dimen/list_primary_image_size"
		android:text="A"
		android:id="@+id/blockImage"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:textSize="@dimen/list_primary_text_in_image_size"
		android:background="@drawable/block_bg_a"
		android:layout_margin="@dimen/activity_vertical_margin"
		android:enabled="false"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Teacher name or subject"
		android:id="@+id/teacherText"
		android:layout_toRightOf="@+id/blockImage"
		android:layout_toEndOf="@+id/blockImage"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:layout_toLeftOf="@+id/timeText"
		android:layout_centerVertical="true"
		android:singleLine="true"
		style="@style/TextView"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="10:08 ~ 10:08"
		android:id="@+id/timeText"
		android:layout_alignTop="@+id/blockImage"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		style="@style/TextView.Secondary"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Room 4105"
		android:id="@+id/roomNumText"
		android:layout_alignParentRight="true"
		android:layout_alignBottom="@+id/blockImage"
		android:singleLine="true"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		style="@style/TextView.Secondary"/>
</RelativeLayout>