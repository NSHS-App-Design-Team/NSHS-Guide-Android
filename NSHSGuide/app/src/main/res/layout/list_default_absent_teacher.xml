<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/list_three_lines_height"
	android:background="?android:attr/selectableItemBackground">

	<ImageView
		android:layout_width="@dimen/list_primary_image_size"
		android:layout_height="@dimen/list_primary_image_size"
		android:id="@+id/defaultTeacherImage"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:background="@drawable/default_teacher_24dp"
		android:layout_margin="@dimen/activity_vertical_margin"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Teacher name"
		android:id="@+id/teacherText"
		android:layout_toRightOf="@+id/defaultTeacherImage"
		android:layout_alignTop="@+id/defaultTeacherImage"
		style="@style/TextView"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Extra info concerning teacher"
		android:id="@+id/infoText"
		android:layout_toRightOf="@+id/defaultTeacherImage"
		android:layout_toEndOf="@+id/defaultTeacherImage"
		android:layout_marginRight="@dimen/activity_horizontal_margin"
		android:singleLine="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/list_three_lines_bottom_margin"
		style="@style/TextView.Secondary"/>

</RelativeLayout>