<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<android.support.v4.view.ViewPager
		android:id="@+id/viewPager"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/pageIndicatorTab"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="?android:attr/actionBarSize"
		android:layout_alignParentBottom="true"
		android:background="@color/colorPrimary"
		android:id="@+id/pageIndicatorTab">

		<ImageView
			android:layout_width="@dimen/tutorial_next_button_size"
			android:layout_height="@dimen/tutorial_next_button_size"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:src="@drawable/ic_chevron_right_24dp"
			android:scaleType="center"
			android:id="@+id/nextButton"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true">

			<ImageView
				android:layout_width="@dimen/view_pager_scroll_indicator_size"
				android:layout_height="@dimen/view_pager_scroll_indicator_size"
				android:id="@+id/scrollIndicator1"
				android:src="@drawable/view_pager_scroll_indicator"/>
			<ImageView
				android:layout_width="@dimen/view_pager_scroll_indicator_size"
				android:layout_height="@dimen/view_pager_scroll_indicator_size"
				android:id="@+id/scrollIndicator2"
				android:src="@drawable/view_pager_scroll_indicator"
				android:layout_marginLeft="@dimen/view_pager_scroll_indicator_margin"/>
			<ImageView
				android:layout_width="@dimen/view_pager_scroll_indicator_size"
				android:layout_height="@dimen/view_pager_scroll_indicator_size"
				android:id="@+id/scrollIndicator3"
				android:src="@drawable/view_pager_scroll_indicator"
				android:layout_marginLeft="@dimen/view_pager_scroll_indicator_margin"/>
		</LinearLayout>

	</RelativeLayout>

</RelativeLayout>